{
  "name": "reversed",
  "description": "",
  "version": "1.0.0",
  "dependencies": {
    "babel-runtime": "^6.9.2"
  },
  "scripts": {
    "lint": "xo src/**",
    "build": "babel src -d lib",
    "dev-watch": "babel src -d lib -s -w",
    "inspect": "jsinspect",
    "posttest": "npm run lint && npm run inspect",
    "test": "ava",
    "test-cov": "nyc -r text -r lcov ava",
    "posttest-cov": "echo 'View results with `npm run test-cov-results`.'",
    "test-cov-results": "(sleep 1; python3 -m webbrowser -t http://127.0.0.1:8123) & (cd coverage/lcov-report && python3 -m http.server 8123 -b 127.0.0.1)",
    "preversion": "npm run build && npm run lint && npm run test",
    "test-ci": "npm run test-cov",
    "posttest-ci": "nyc report --reporter=text-lcov | coveralls"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.15.1",
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.5.0",
    "coveralls": "^2.11.9",
    "jsinspect": "^0.8.0",
    "nyc": "^6.4.4",
    "xo": "^0.15.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/reversed.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "eqeqeq": [
        2,
        "smart"
      ],
      "no-eq-null": [
        0
      ],
      "no-use-before-define": [
        1
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  }
}
